 <%= form_for @contact do |f| %>
    <%# if flash[:error].present? %>
         <%#=  flash[:error] %>
    <%# end %>
    <!-- <%#= f.label :name %> <br> -->
    <%= f.text_field :name, required: true, placeholder: 'Name', class: 'form-input' %>
    <br>
    <!-- <%#= f.label :email %> <br> -->
    <%= f.text_field :email, required: true, placeholder: 'Email', class: 'form-input' %>
    <br>
    <!-- <%#= f.label :message %> <br> -->
    <%= f.text_area :message, as: :text, placeholder: 'Your message', class: 'form-text', :input_html => { 'rows' => 4, 'cols' => 10 } %>
    <div class="hidden">
      <%= f.label :nickname %> <br>
      <%= f.text_field :nickname, hint: 'leave this field blank' %>
    </div>

    <%= f.submit 'Send Message', class: "form-btn" %>
  <% end %>
