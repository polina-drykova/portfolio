 <%= form_for @contact do |f| %>
    <%# if flash[:error].present? %>
         <%#=  flash[:error] %>
    <%# end %>
    <div class="input-group">
    <!-- <%#= f.label :name %> <br> -->
    <%= f.text_field :name, required: true, placeholder: 'Name', class: 'form-input effect-18' %>
    <br>
    <!-- <%#= f.label :email %> <br> -->
    <%= f.text_field :email, required: true, placeholder: 'Email', class: 'form-input effect-18' %>
    </div>
    <br>
    <!-- <%#= f.label :message %> <br> -->
    <%= f.text_area :message, as: :text, placeholder: 'Your message', class: 'form-text effect-18', :input_html => { 'rows' => 4, 'cols' => 10 } %>
    <div class="hidden">
      <%= f.label :nickname %> <br>
      <%= f.text_field :nickname, hint: 'leave this field blank' %>
    </div>
    <div class='notice'>
        <% if flash[:notice].present? %>
        <%= cl_image_tag ("https://image.flaticon.com/icons/svg/443/443138.svg") %>
          <%= flash[:notice] %>
        <% end %>
      </div>
    <%= f.submit 'Send Message', id: 'sweet-alert-demo', data: { disable_with: 'Sendingâ€¦' }, class: "form-btn" %>

  <% end %>
